<% include ../partials/header %>

<div class="container">
    

    <div class="mt-5 row">
        <div class="col-lg-12">
            <h3>Welcome <%= user.performingAs %></h3>
            <p>
                <a class="btn btn-lg btn-danger" href="media/new">Drop a Song</a>
            </p>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% bands.forEach(function(band){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= band.image %>">
                    <div class="card-body">
                        <div class="card-title" style="color: black;">
                        <h4><%= band.name %></h4> 
                        </div>
                    </div>
                    <a href="/media/<%= band._id %>" class="btn btn-danger">More Info</a>
                </div>
            </div>
        <% }); %>
    </div> 

<% include ../partials/footer %>