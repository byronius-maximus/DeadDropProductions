<% include ../partials/header %>

<br>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card" >
                <div class="card-header">
                    dead DROP Productions
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= band.image %>">
                <div class="card-body">
                    
                    <h4 class="card-title"><a><%= band.name %></a></h4>
                    <p class="card-text"><%= band.description %></p>
                    <p><em>Submitted By <%= band.author.username %></em></p>
                    <% if(currentUser && band.author.id.equals(currentUser._id)){ %>
                    <a href="/media/<%= band._id %>/edit"><button class="btn btn-warning btn-sm">Edit</button></a>
                    <form class="delete-form" action="/media/<%= band._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-body text-right">
                    <a class="btn btn-danger btn-lg" href="/media/<%= band._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <% band.comments.forEach(function(comment){ %>
                            <div class="card-body">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p><%= comment.text %></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-xs btn-warning" href="/media/<%= band._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                    <form class="delete-form" action="/media/<%= band._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-xs btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>